doctype html
html(lang="en")
    head
        - var name = 'Jade'
        title= name
        meta(charset="utf-8")
        link(rel="stylesheet", type="text/css" href="/css/font-awesome.min.css")
        link(rel="stylesheet", type="text/css" href="/css/blog/index.css")
    body
        .j-container
            include ../../includes/leftside
        .j-main
            .list-container
                ul(class="unstyled clearfix sort-nav")
                    li.active
                        a.category(href="/blog/") 全部
                    each vat in cates
                        li
                            a.category(href="/blog/#{vat.id}") #{vat.name}
                ul.article-list.thumbnails.clearfix
                    each val in blogs
                        li.have-img
                            a.wrap-img(href="/blog/p/#{val.id}")
                                img(src="http://upload-images.jianshu.io/upload_images/1767483-e27c7530fb680b6d.jpg?imageMogr2/auto-orient/strip%7CimageView2/1/w/300/h/300" alt="300")
                            div
                                p.list-top
                                    a.author-name.blue-link(target="_blank" href="/users/3e2c151e2c9d") 韩大爷的杂货铺
                                    em ·
                                    span.time(data-shared-at="#{val.createAt}") #{moment(val.createAt).format('YYYY年MM月DD日')}
                                h4.title
                                    a(arget="_blank" href="/blog/p/#{val.id}") #{val.title}
                                .list-footer
                                    a(target="_blank" href="/blog/p/#{val.id}") 阅读 #{val.pv}
                                        span · 喜欢 330
                                        span · 打赏 2