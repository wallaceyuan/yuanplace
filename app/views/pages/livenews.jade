doctype
html(lang="en")
    head
    meta(charset="UTF-8")
    title #{title}
    link(rel="stylesheet", type="text/css" href="/css/font-awesome.min.css")
    link(rel="stylesheet", type="text/css" href="/css/crawler.css")
    style.
        .iframeW {width: 100%;height: 667px;background: url('/images/iphone.png') no-repeat top center;background-size: 100% 100%;padding: 100px 10px 100px 20px;}
        .iframeInner {margin: 0 auto;height: 100%;width: 395px;}
        .j-container{background:#0a0607}
        .j-main{background:url(/images/livenews.jpg) no-repeat top left;}
        iframe[name=testIframe]{overflow-x:scroll;overflow-y:hidden;width:100%;height:100%;}
        .box{text-align:center;}
        input[name=num]{margin-right: 10px;margin-bottom: 20px;}
        .form-control{display:inline-block;-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;padding:6px 12px;width:500px;height:34px;border:1px solid #ccc;border-radius:4px;background-color:#fff;background-image:none;-webkit-box-shadow:inset 0 1px 1px rgba(0,0,0,.075);box-shadow:inset 0 1px 1px rgba(0,0,0,.075);color:#555;font-size:14px;line-height:1.42857143;-webkit-transition:border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;-o-transition:border-color ease-in-out .15s,box-shadow ease-in-out .15s;transition:border-color ease-in-out .15s,box-shadow ease-in-out .15s;}
        .btn-default.active,.btn-default.focus,.btn-default:active,.btn-default:focus,.btn-default:hover,.open>.dropdown-toggle.btn-default{border-color:#adadad;background-color:#e6e6e6;color:#333;}
        .btn.focus,.btn:focus,.btn:hover{color:#333;text-decoration:none;}
        .btn{display:inline-block;margin-bottom:0;padding:6px 12px;border:1px solid transparent;border-radius:4px;background-image:none;vertical-align:middle;text-align:center;white-space:nowrap;font-weight:400;font-size:14px;line-height:1.42857143;cursor:pointer;-ms-touch-action:manipulation;touch-action:manipulation;-webkit-user-select:none;-moz-user-select:none;-ms-user-select:none;user-select:none;}
    body
        .j-container
            include ../includes/leftside
            .j-main.clearfix
                .box
                    input(ype="text" name="num" class="form-control" placeholder="输入1-300")
                    button(class="btn btn-default") 提交
                .iframeInner
                    .iframeW
                        iframe(src='/livepage/' name="testIframe" frameborder="0" style="" scrolling="yes")

    script(src='/vendor/jquery.js' type="text/javascript")
    script.
        var url = '/livepage/'
        $('button').on('click',function(){
            ifUrlChange()
        })
        $('input').on('keypress',function (e) {
            if(e.keyCode == 13){
                ifUrlChange()
            }
        })
        function ifUrlChange() {
            var value = $('input[name="num"]').val()
            if (!value) return
            $('input[name="num"]').val('')
            var ifUrl = url + '?id=' + value
            $('iframe').attr('src', ifUrl)
        }
